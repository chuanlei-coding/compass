{
  "name": "word-ai-assistant",
  "version": "1.0.0",
  "description": "Word插件 - AI助手，通过对话窗口编辑Word文档",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "node start-dev.js",
    "dev:simple": "webpack serve --mode development",
    "start": "npm run dev",
    "validate": "office-addin-manifest validate manifest.xml",
    "setup-certs": "npx office-addin-dev-certs install --machine"
